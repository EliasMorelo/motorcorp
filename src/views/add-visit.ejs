<!DOCTYPE html>
<html>
	<%- include("partials/head") %>
<body>
<div id="CONTAINER">
	<i id="SIGNAL" class="fa fas fa-signal"></i>
	<i id="WIFI" class="fa fas fa-wifi"></i>
	<span id="HOUR">7:50 PM</span>
	<i id="BATTERY" class="fa fas fa-battery-full"></i>
	<a href="/Profile"><i Id="BACK" class="fa fas fa-chevron-left"></i></a>
	<div class="col-md-11">
		<h3 id="New_Visit" >New visit.</h3>
		<form action="/add-visit" method="post">
		  <div class="form-group">
			  <input type="text" id="Date_Visit" required class="form-control" name="date">
		  </div>
		  <div class="form-group">
			  <input id="Name_Customer" class="form-control" type="text" required name="plate" placeholder="License Plate" autofocus>
		  </div>
		  <div class="input-group">
			  <label id="Type_Visit" for="Type">Type of Visit</label>
			  <select id="Type" name="visit">
				<option value="Wash">Wash</option>
				<option value="Oil change">Oil change</option>
				<option value="Brake change and revision">Brake change and revision</option>
				<option value="General review">General Review</option>
				<option value="Luxury item">Luxury item</option>
				<option value="Alignment">Alignment</option>
				<option value="Balancing">Balancing</option>
				<option value="Tire change">Tire change</option>
			</select>
		  </div>
		  <div class="form-group">
			<textarea name="description" id="Description" cols="45" rows="7">Comments</textarea>
		 </div>
		 <div class="form-group">
			<input class="btn btn-info" id="Send" type="submit" value="Send">
		 </div>
		</form>
		<script>
			var fecha = new Date();
			document.getElementById("Date_Visit").value = fecha.toLocaleDateString();
		</script>
	</div>
	<a href="/profile"><i Id="BACK_TWO" class="fa fas fa-arrow-circle-left"></i></a>
	<a href="/add-visit"><i Id="CIRCLE" class="fa fas fa-circle"></i></a>
</div>
</body>
</html>
